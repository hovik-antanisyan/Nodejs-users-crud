<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <form action="" method="post">
            <div class="form-group">
                <label for="firstName">First name</label>
                <input type="text" id="firstName" name="firstName" class="form-control"
                       {{#if props.firstName}}value="{{props.firstName}}"{{/if}}>
            </div>
            {{#if errors.firstName}}
                <p class="alert alert-warning">{{errors.firstName}}</p>
            {{/if}}
            <div class="form-group">
                <label for="lastName">Last name</label>
                <input type="text" id="lastName" name="lastName" class="form-control"
                       {{#if props.lastName}}value="{{props.lastName}}"{{/if}}>
            </div>
            {{#if errors.lastName}}
                <p class="alert alert-warning">{{errors.lastName}}</p>
            {{/if}}
            <div class="form-group">
                <label for="dob">Date of birth</label>
                <input type="date" id="dob" name="dob" class="form-control"
                       {{#if props.dob}}value="{{props.dob}}"{{/if}}>
            </div>
            {{#if errors.dob}}
                <p class="alert alert-warning">{{errors.dob}}</p>
            {{/if}}
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="address" name="address" class="form-control"
                       {{#if props.address}}value="{{props.address}}"{{/if}}>
            </div>
            <div class="form-group">
                <label for="address2">Address2</label>
                <input type="text" id="address2" name="address2" class="form-control"
                       {{#if props.address2}}value="{{props.address2}}"{{/if}}>
            </div>
            <div class="form-group">
                <label for="country">Country</label>
                <input type="text" id="country" name="country" class="form-control"
                       {{#if props.country}}value="{{props.country}}"{{/if}}>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" id="city" name="city" class="form-control"
                       {{#if props.city}}value="{{props.city}}"{{/if}}>
            </div>
            <div class="form-group">
                <label for="postalCode">Postal code</label>
                <input type="text" id="postalCode" name="postalCode" class="form-control"
                       {{#if props.postalCode}}value="{{props.postalCode}}"{{/if}}>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Save">
            </div>
        </form>
    </div>
</div>