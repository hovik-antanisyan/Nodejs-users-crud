<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h1>User list</h1>
        {{#if userCount}}
            <table class="table table-bordered table-responsive table-striped table-hover">
                <thead>
                <tr>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Date of birth</td>
                    <td>Address</td>
                    <td>Address2</td>
                    <td>Country</td>
                    <td>City</td>
                    <td>Post Code</td>
                    <td>Actions</td>
                </tr>
                </thead>
                <tbody>
                {{#each users}}
                    <tr>
                        <td>{{this.firstName}}</td>
                        <td>{{this.lastName}}</td>
                        <td>{{this.dob}}</td>
                        <td>{{this.address}}</td>
                        <td>{{this.address2}}</td>
                        <td>{{this.country}}</td>
                        <td>{{this.city}}</td>
                        <td>{{this.postalCode}}</td>
                        <td>
                            <form action="/users/{{this._id}}" method="post" style="display: inline-block">
                                <input type="hidden" name="_method" value="DELETE">
                                <button href="/users/" class="btn btn-danger"><i class="fa fa-times"></i></button>
                            </form>
                            <a href="/users/edit/{{this._id}}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        {{else}}
            <h2 class="alert alert-warning">No user found.</h2>
        {{/if}}
    </div>
</div>